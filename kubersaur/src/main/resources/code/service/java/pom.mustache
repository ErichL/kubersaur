<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.kubersaurus.parent</groupId>
        <artifactId>project-parent</artifactId>
        <version>1.1-SNAPSHOT</version>
        <relativePath>../../parent</relativePath>
    </parent>

    <groupId>{{organisationPackage}}.{{organisationName}}.service</groupId>
    <artifactId>{{microserviceName}}-service</artifactId>
    <packaging>jar</packaging>
    <version>1.1-SNAPSHOT</version>
    <name>{{microserviceName}}-service</name>

    <properties>
        <docker.image.name>{{organisationName}}/{{microserviceName}}</docker.image.name>
    </properties>

    <dependencies>

        <!-- API client dependencies -->
        <dependency>
            <groupId>{{organisationPackage}}.{{organisationName}}.api</groupId>
            <artifactId>{{microserviceName}}-api</artifactId>
            <version>1.1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.kubersaurus.composite</groupId>
            <artifactId>composite-bathe-runner</artifactId>
            <version>[${release.version}]</version>
        </dependency>

        <!-- jersey + netty + hk2 dependencies -->
        <dependency>
            <groupId>org.kubersaurus.composite</groupId>
            <artifactId>composite-jersey-netty</artifactId>
            <version>[${release.version}]</version>
        </dependency>
        <dependency>
            <groupId>org.kubersaurus.common</groupId>
            <artifactId>java-microservice-support</artifactId>
            <version>[${release.version}]</version>
        </dependency>

        <dependency>
            <groupId>org.kubersaurus.composite</groupId>
            <artifactId>composite-jdk11</artifactId>
            <version>[${release.version}]</version>
        </dependency>



        <!-- logging dependencies for bridging common logger by using log4j2 -->
        <dependency>
            <groupId>org.kubersaurus.composite</groupId>
            <artifactId>composite-logging</artifactId>
            <version>[${release.version}]</version>
            <exclusions>
                <exclusion>
                    <groupId>org.codehaus.groovy</groupId>
                    <artifactId>groovy-testng</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.kubersaurus.composite</groupId>
            <artifactId>composite-swagger-ui</artifactId>
            <version>[${release.version}]</version>
        </dependency>

        <!-- test dependencies -->
        <dependency>
            <groupId>org.kubersaurus.composite</groupId>
            <artifactId>composite-jersey-test</artifactId>
            <version>[${release.version}]</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.kubersaurus.composite</groupId>
            <artifactId>composite-spock-test</artifactId>
            <version>[${release.version}]</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.kubersaurus.common</groupId>
            <artifactId>common-jackson-support</artifactId>
            <version>1.1-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>io.repaint.maven</groupId>
                <artifactId>tiles-maven-plugin</artifactId>
                <version>${tiles-maven-plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <filtering>false</filtering>
                    <tiles>
                        <tile>org.kubersaurus.tiles:tile-java11:[1,2)</tile>
                        <tile>org.kubersaurus.tiles:tile-groovy-test:[1,2)</tile>
                        <tile>org.kubersaurus.tiles:tile-jib-docker:[2.10,3)</tile>
                        <tile>org.kubersaurus.tiles:tile-release-manifest:[1.3,2)</tile>
                    </tiles>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
